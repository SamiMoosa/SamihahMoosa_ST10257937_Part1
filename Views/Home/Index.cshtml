@model int  // We only need to pass userID to this view

@{
    ViewData["Title"] = "Home Page";
    var userID = ViewData["userID"];
    var products = ViewData["Products"] as List<NewApp.Models.productTable>;
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Welcome to Khumalo Craft Paintings</h1>
        <p>Discover the beauty and creativity of South African artwork. Our paintings are crafted by talented artists from South Africa, bringing you a unique and authentic piece of African heritage.</p>

        <h2>About Us</h2>
        <p>At Khumalo Craft Paintings, we are dedicated to promoting African culture through our exquisite collection of paintings. Each piece is carefully selected to represent the rich and diverse artistic expressions of South Africa. Explore our gallery and find the perfect artwork to enhance your space.</p>
    </div>

    <!-- Carousel Section -->
    <div class="carousel-container mb-4" style="max-width: 400px; margin: 0 auto;">
        <div id="artCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#artCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#artCarousel" data-slide-to="1"></li>
                <li data-target="#artCarousel" data-slide-to="2"></li>
                <li data-target="#artCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/img5.png" class="d-block w-100" alt="Art Image 1" style="height: 300px;">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/img6.png" class="d-block w-100" alt="Art Image 2" style="height: 300px;">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/img7.png" class="d-block w-100" alt="Art Image 3" style="height: 300px;">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/img8.png" class="d-block w-100" alt="Art Image 4" style="height: 300px;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#artCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#artCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <h2 align ="center">Place Your Order</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Availability</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Category</td>
                    <td>@product.Availability</td>
                    <td>
                        <form asp-controller="Transaction" asp-action="PlaceOrder" method="post">
                            <input type="hidden" name="userID" value="@userID" />
                            <input type="hidden" name="productID" value="@product.ProductID" />
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
